{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "dist*"
  ],
  "include": [
    "**/*",
    ".eslintrc.js"
  ]
}
