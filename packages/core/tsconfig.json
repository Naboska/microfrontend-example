{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["es2019", "DOM"],
    "module": "system",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
